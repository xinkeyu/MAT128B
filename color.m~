function [mycolor] = color()
%returns the RGB triplet for divergent orbit
%if convergent, black
colormap hot
count = 1;
p(1,1) = -1 -i;
for x = 1:200
    for y = 1:200
           z = 0.1*(x-1)-1 + 0.1i*(y-1) - i; 
           p(x,y) =  0.1*(x-1)-1+ 0.1i*(y-1) - i;
           count = 1;
        while abs(z) < 100
           count = count+1;
           z = z^2 + x + 1i *y;
           
           if (count >= 100) %after 100 iterations, still not diverge
               bounded = true;
               mycolor(x,y) = 5*count;
               return;
           end
        end
                mycolor(x,y) = 5*count;  
      
    end
end
size real(
scatter(real(p),imag(p),'*r')
pbaspect ([1 1 1]);
end